{
  "languages": {
    "HTML": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--plugin=prettier-plugin-jinja-template",
            "--parser=jinja-template",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
